---
const { translations } = Astro.props;
const t = translations;
---

<section id="implementation" class="section-padding bg-gray-50">
  <div class="container-width">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-6">{t.implementation.title}</h2>
        <p class="text-lg text-gray-700 mb-8">{t.implementation.intro}</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-4 mb-8">
        {t.implementation.principles.map((principle: string) => (
          <div class="flex items-start space-x-3 bg-white p-4 rounded-lg">
            <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-gray-700">{principle}</p>
          </div>
        ))}
      </div>
      
      <div class="bg-white p-6 rounded-lg mb-8">
        <h3 class="text-xl font-semibold mb-4">{t.implementation.timeline}</h3>
        <div class="space-y-3">
          {t.implementation.phases.map((phase: string) => (
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <p class="text-gray-700">{phase}</p>
            </div>
          ))}
        </div>
      </div>
      
      <p class="text-gray-700 leading-relaxed">
        {t.implementation.outro}
      </p>
    </div>
  </div>
</section>