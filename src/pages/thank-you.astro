---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import en from '../i18n/en.json';
import Layout from '../layouts/Layout.astro';

const translations = en;
---

<Layout title="Thank You - Kenzap Factory" lang="en">
  <Header lang="en" translations={translations} />
  <main class="pt-32 pb-20 px-4 sm:px-6 lg:px-8 min-h-screen flex items-center">
    <div class="container-width max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-6">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-4xl font-bold mb-4">Thank you for your message!</h1>
        <p class="text-xl text-gray-600 mb-8">
          We've received your inquiry and will contact you within 1-2 business days.
        </p>
      </div>
      
      <div class="bg-gray-50 p-6 rounded-lg mb-8">
        <p class="text-gray-700 mb-4">
          In the meantime, you might be interested in:
        </p>
        <div class="space-y-3">
          <a href="/#manufacturing" class="block text-primary hover:underline">
            → Explore our manufacturing features
          </a>
          <a href="/#case-study" class="block text-primary hover:underline">
            → Read customer case studies
          </a>
          <a href="mailto:factory@kenzap.com" class="block text-primary hover:underline">
            → Email us directly: factory@kenzap.com
          </a>
        </div>
      </div>
      
      <a 
        href="/"
        class="inline-block px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
      >
        ← Back to homepage
      </a>
    </div>
  </main>
  <Footer translations={translations} />
</Layout>